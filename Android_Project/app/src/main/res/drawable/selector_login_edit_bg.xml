<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false"><!-- 不可用-->
        <layer-list android:shape="rectangle">
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="#d3d3d3" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true" android:state_enabled="true"><!-- 点击 -->
        <layer-list android:shape="rectangle">
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="#d3d3d3" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false" android:state_enabled="true"><!-- 未点击 -->
        <layer-list android:shape="rectangle">
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="#d3d3d3" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>